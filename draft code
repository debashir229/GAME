    int y;
    char icon;
    Point() : x{ 30 }, y{ 30 }, icon{ '.' } {}
    Point(int X, int Y, char Icon) : x{ X }, y{ Y }, icon{ Icon } {}
};

const int HIGH = 20;
const int WIDTH = 20;
int fps = 60;
int latency = 1000 / 60;

